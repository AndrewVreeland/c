{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch with Files",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": ["<", "${fileDirname}/in7.txt", ">", "${fileDirname}/out.txt"],
            "preLaunchTask": "Build and Run with Files", // THIS IS THE KEY FIX
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}